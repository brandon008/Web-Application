{{body}}

<p> 
    {{!-- <h5><a href={{details.url}}>{{details.title}}</a></h5> --}}
    <h2 >{{details.title}}</h2>
    description: {{details.description}}
    <div class="fileName">
        <h5>{{details.file}}</h5>
    </div>
    <div class="title">
        <script>
            const fileName = document.querySelector('.fileName').innerText;
            const sound      = document.createElement('audio');
            sound.id       = 'audio-player';
            sound.controls = 'controls';
            sound.src      = '../mp3/'+fileName;
            sound.type     = 'audio/mpeg';
            document.querySelector('.title').appendChild(sound);
            //document.querySelector(".title").innherHTML = '<audio id="audio-player" controls="controls" src=mp3/winter.mp3" type="audio/mpeg"'>;

        </script>
    </div>
    
    Posted by: {{details.op}}
</p>